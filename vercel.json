{
  "rewrites": [
    {
      "source": "/(.+\\.(ico|png|jpg|jpeg|svg|json|txt|css|js|webp))",
      "destination": "/$1"
    },
    { "source": "/(.*)", "destination": "/" }
  ],
  "headers": [
    {
      "source": "/(.+\\.json)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-cache, no-store, must-revalidate"
        }
      ]
    }
  ]
}
